<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    //blue to orange transition
    <Transition
        motion:constraintSetStart="@id/s1"
        motion:constraintSetEnd="@id/s2"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="middle" />
    </Transition>

    //orange to blue transition
    <Transition
        motion:constraintSetStart="@id/s2"
        motion:constraintSetEnd="@id/s1"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="middle" />
    </Transition>

    //orange to red transition
    <Transition
        motion:constraintSetStart="@id/s2"
        motion:constraintSetEnd="@id/s3"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="middle" />
    </Transition>

    //red to orange transition
    <Transition
        motion:constraintSetStart="@id/s3"
        motion:constraintSetEnd="@id/s2"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="middle" />
    </Transition>

    //red to green transition **
    <Transition
        motion:constraintSetStart="@id/s3"
        motion:constraintSetEnd="@id/s4"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="middle" />
    </Transition>

    //green to red transition **
    <Transition
        motion:constraintSetStart="@id/s4"
        motion:constraintSetEnd="@id/s3"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="middle" />
    </Transition>

    //green to purple transition **
    <Transition
        motion:constraintSetStart="@id/s4"
        motion:constraintSetEnd="@id/s5"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="middle" />
    </Transition>

    //purple to green transition **
    <Transition
        motion:constraintSetStart="@id/s5"
        motion:constraintSetEnd="@id/s4"
        motion:duration="700">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="middle" />
    </Transition>


    //states
    <ConstraintSet android:id="@+id/s1">
        <Constraint android:id="@+id/v1">
            <Transform android:translationX="0dp" />
        </Constraint>

        <Constraint android:id="@+id/v2">
            <Transform android:rotationY="-15" android:translationX="250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v3">
            <Transform android:rotationY="-15" android:translationX="500dp"/>
        </Constraint>

        <Constraint android:id="@+id/v4">
            <Transform android:rotationY="-15" android:translationX="750dp"/>
        </Constraint>

        <Constraint android:id="@+id/v5">
            <Transform android:rotationY="-15" android:translationX="1000dp"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/s2">
        <Constraint android:id="@+id/v1">
            <Transform android:rotationY="15" android:translationX="-250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v2">
            <Transform android:rotationY="0" android:translationX="0dp"/>
        </Constraint>

        <Constraint android:id="@+id/v3">
            <Transform android:rotationY="-15" android:translationX="250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v4">
            <Transform android:rotationY="-15" android:translationX="500dp"/>
        </Constraint>

        <Constraint android:id="@+id/v5">
            <Transform android:rotationY="-15" android:translationX="750dp"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/s3">
        <Constraint android:id="@+id/v1">
            <Transform android:rotationY="15" android:translationX="-500dp"/>
        </Constraint>

        <Constraint android:id="@+id/v2">
            <Transform android:rotationY="15" android:translationX="-250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v3">
            <Transform android:rotationY="0" android:translationX="0dp"/>
        </Constraint>

        <Constraint android:id="@+id/v4">
            <Transform android:rotationY="-15" android:translationX="250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v5">
            <Transform android:rotationY="-15" android:translationX="500dp"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/s4">
        <Constraint android:id="@+id/v1">
            <Transform android:rotationY="15" android:translationX="-750dp"/>
        </Constraint>

        <Constraint android:id="@+id/v2">
            <Transform android:rotationY="15" android:translationX="-500dp"/>
        </Constraint>

        <Constraint android:id="@+id/v3">
            <Transform android:rotationY="15" android:translationX="-250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v4">
            <Transform android:rotationY="0" android:translationX="0dp"/>
        </Constraint>

        <Constraint android:id="@+id/v5">
            <Transform android:rotationY="-15" android:translationX="250dp"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/s5">
        <Constraint android:id="@+id/v1">
            <Transform android:rotationY="15" android:translationX="-1000dp"/>
        </Constraint>

        <Constraint android:id="@+id/v2">
            <Transform android:rotationY="15" android:translationX="-750dp"/>
        </Constraint>

        <Constraint android:id="@+id/v3">
            <Transform android:rotationY="15" android:translationX="-500dp"/>
        </Constraint>

        <Constraint android:id="@+id/v4">
            <Transform android:rotationY="15" android:translationX="-250dp"/>
        </Constraint>

        <Constraint android:id="@+id/v5">
            <Transform android:rotationY="0" android:translationX="0dp"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>
